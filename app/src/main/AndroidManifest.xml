<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.damien.realworldproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register" android:screenOrientation="portrait"/>
        <activity
            android:name=".customer"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait"/>
        <activity android:name=".appointment" android:screenOrientation="portrait"/>
        <activity android:name=".reload" android:screenOrientation="portrait"/>
        <activity android:name=".profile" android:screenOrientation="portrait"/>
        <activity android:name=".map" android:screenOrientation="portrait"/>
        <activity android:name=".editProfile" android:screenOrientation="portrait"/>
        <activity android:name=".changePassword" android:screenOrientation="portrait"/>
        <activity android:name=".staffLocation" android:screenOrientation="portrait"/>
        <activity android:name=".checkAppointment" android:screenOrientation="portrait"/>
        <activity android:name=".finalAppointmentInfo" android:screenOrientation="portrait"/>
        <activity android:name=".paymentReview" android:screenOrientation="portrait"/>
    </application>

</manifest>