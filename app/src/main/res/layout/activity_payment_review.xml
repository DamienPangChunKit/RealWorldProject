<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentReview">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Please leave a review!"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.design.widget.TextInputLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp"
        android:stretchColumns="2">

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Service ID"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalServiceID"
                android:text="Service ID "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Services"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalServiceType"
                android:text="Service Type "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Address"
                android:textSize="18dp"
                android:textStyle="bold"
                android:lines="3"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalAddress"
                android:layout_width="0dp"
                android:text="Address "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:lines="3"
                android:inputType="textMultiLine"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Date"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalDate"
                android:text="Date "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Time"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalTime"
                android:text="Time "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Time Ended "
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalTimeEnded"
                android:text="Time Ended "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Description"
                android:textSize="18dp"
                android:textStyle="bold"
                android:lines="2"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalDescription"
                android:layout_width="0dp"
                android:text="Description "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:lines="2"
                android:inputType="textMultiLine"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Price"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalPrice"
                android:text="Price "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text=" Status"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tvFinalStatus"
                android:text="Status "
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"
                android:background="@drawable/rectangle_border"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <RatingBar
        android:id="@+id/rating_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="145dp"
        android:numStars="5"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="400dp"
        android:text="Rating"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Review"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/eTReview"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/eTReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:inputType="textMultiLine"
        android:lines="3"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Pay and submit"
        android:onClick="btnSubmitPaymenReview_onClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>